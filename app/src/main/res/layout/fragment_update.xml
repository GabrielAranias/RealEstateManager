<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".ui.update.UpdateFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/update_estate_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/add_estate_headline"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/update_type_and_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_estate_headline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_type"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_apartment_24" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_price"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_attach_money_24" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_surface_and_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_type_and_price">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_surface"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_surface"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_aspect_ratio_24" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_rooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_rooms"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_home_24" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_bedrooms_and_bathrooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_surface_and_rooms">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_bedrooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_bedrooms"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_bed_24" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_bathrooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_bathrooms"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_hot_tub_24" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="6dp"
                android:hint="@string/add_description"
                android:imeOptions="actionNext"
                android:inputType="textAutoCorrect"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:drawableStartCompat="@drawable/ic_baseline_description_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_bedrooms_and_bathrooms" />

            <TextView
                android:id="@+id/update_location_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/add_location_headline"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_description" />

            <LinearLayout
                android:id="@+id/update_street_and_postal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_location_headline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_street"
                    android:imeOptions="actionNext"
                    android:inputType="textPostalAddress"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_streetview_24" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_postal_code"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_city_and_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_street_and_postal_code">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_city"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_maps_home_work_24" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_country"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_terrain_24" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_district"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawablePadding="6dp"
                android:hint="@string/add_district"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:drawableStartCompat="@drawable/ic_baseline_holiday_village_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_city_and_country"
                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/update_vicinity_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/add_vicinity_headline"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_district" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_vicinity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawablePadding="6dp"
                android:hint="@string/add_vicinity"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:drawableStartCompat="@drawable/ic_baseline_park_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_vicinity_headline" />

            <TextView
                android:id="@+id/update_info_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/add_info_headline"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_vicinity" />

            <LinearLayout
                android:id="@+id/update_status_and_agent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_info_headline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_status"
                    android:imeOptions="actionNext"
                    android:inputType="textPostalAddress"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_point_of_sale_24" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_agent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_agent"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_person_24" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_status_and_agent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_entry_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_market_entry_date"
                    android:imeOptions="actionNext"
                    android:inputType="date"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_date_range_24" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_sale_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:hint="@string/add_sale_date"
                    android:imeOptions="actionDone"
                    android:inputType="date"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    app:drawableStartCompat="@drawable/ic_baseline_update_24" />

            </LinearLayout>

            <TextView
                android:id="@+id/update_media_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/add_media"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_dates" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_media_headline"
                app:srcCompat="@drawable/penthouse_sample">

            </androidx.appcompat.widget.AppCompatImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/update_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:contentDescription="@string/update_fab"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:srcCompat="@drawable/ic_baseline_check_24" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>